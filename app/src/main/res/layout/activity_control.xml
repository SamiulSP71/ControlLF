                                        android:background="@drawable/button_color"

                                        android:layout_marginTop="10dp"
                                        android:layout_centerHorizontal="true"

                                        android:textColor="@color/white"
                                        android:textOn="ON"
                                        android:textOff="OFF" />


                                </RelativeLayout>


