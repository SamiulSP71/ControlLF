                                        <TextView
                                            android:id="@+id/fan5SeekValue"
                                            android:layout_below="@id/Cn_Fan5_Top"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"

                                            android:text="0"
                                            android:textColor="@color/white"
                                            />

                                    </RelativeLayout>

                                    <SeekBar
                                        android:id="@+id/seekb_fan5"
                                        android:layout_below="@id/fan5Main"
                                        android:layout_width="130dp"
                                        android:layout_height="48dp"

                                        android:max="10"
                                        android:thumbTint="@color/white"
                                        android:thumb="@drawable/speed"
                                        android:progressDrawable="@drawable/seekbarbg"
                                        android:splitTrack="false"

                                        android:layout_marginStart="2dp"
                                        android:layout_marginEnd="2dp"


                                        />


                                </RelativeLayout>

                            </RelativeLayout>



                        </RelativeLayout>


                    </RelativeLayout>
                </RelativeLayout>



            </ScrollView>
            <RelativeLayout
                android:id="@+id/ConnectPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"

                >

                <TextView

                    android:id="@+id/BtnConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:layout_marginStart="5dp"
                    android:background="@drawable/buttons"

                    android:drawablePadding="5dp"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="15dp"

                    android:gravity="center"
                    android:text="Connect"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@drawable/bluetoothwht" />
                <TextView
                    android:layout_below="@id/BtnConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="5dp"

                    android:textAlignment="center"
                    android:textSize="11sp"

                    android:text="Don't forget to turn on your 'Bluetooth and Location' both before Connect."

                    />



            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>



