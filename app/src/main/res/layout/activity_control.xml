                                            android:layout_height="wrap_content"

                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"

                                            android:text="0"
                                            android:textColor="@color/white"
                                            />

                                    </RelativeLayout>

                                    <SeekBar
